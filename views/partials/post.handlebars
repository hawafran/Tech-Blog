<article class="post">
        <div class="info-section">
            <div class="post-name">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by {{user.username}}, {{formatDate created_at}}
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
</article>